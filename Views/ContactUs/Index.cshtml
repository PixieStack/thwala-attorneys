@model ThwalaAttorneys.Models.ContactFormViewModel
@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Contact Section -->
<section id="contact" class="py-20 bg-gray-50">
    <div class="container mx-auto px-4 md:px-8">
        <div class="text-center mb-16">
            <span class="text-primary font-medium">GET IN TOUCH</span>
            <h2 class="text-3xl md:text-4xl font-bold text-secondary font-playfair mt-2 mb-4">Contact Us Today</h2>
            <div class="w-20 h-1 bg-primary mx-auto mb-6"></div>
            <p class="text-lg text-gray-600 max-w-3xl mx-auto">
                Have questions or need legal assistance? Reach out to us through any of our contact channels or visit our office.
            </p>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-8 max-w-4xl mx-auto" role="alert">
                    <strong class="font-bold">Success!</strong>
                    <span class="block sm:inline"> @TempData["SuccessMessage"]</span>
                </div>
        }

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-1">
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <div class="bg-secondary p-6">
                        <h3 class="text-xl font-bold text-white mb-4">Contact Information</h3>
                        <p class="text-white/80">
                            Reach out to us through any of these channels or visit our office during business hours.
                        </p>
                    </div>

                    <div class="p-6 space-y-6">
                        <div class="flex items-start">
                            <div class="bg-primary/10 p-3 rounded-full text-primary mr-4">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div>
                                <h4 class="font-bold text-secondary">Our Office</h4>
                                <p class="text-gray-600">Suite No.4 Commerce & Industry Chambers,<br> 235 Meyer Street, Germiston, 1401<br>South Africa</p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="bg-primary/10 p-3 rounded-full text-primary mr-4">
                                <i class="fas fa-phone-alt"></i>
                            </div>
                            <div>
                                <h4 class="font-bold text-secondary">Phone Numbers</h4>
                                <p class="text-gray-600">Office: (+27) 010-615-0136<br>Fax: (+27) 086-613-5297<br>Emergency: (+27) 073-905-1761</p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="bg-primary/10 p-3 rounded-full text-primary mr-4">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div>
                                <h4 class="font-bold text-secondary">Email Addresses</h4>
                                <p class="text-gray-600">General Inquiries: thwalaattorneys@outlook.co</p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div class="bg-primary/10 p-3 rounded-full text-primary mr-4">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div>
                                <h4 class="font-bold text-secondary">Business Hours</h4>
                                <p class="text-gray-600">Monday - Friday: 8:00 AM - 4:00 PM<br>Weekends: Closed</p>
                            </div>
                        </div>

                        <div class="pt-4 border-t border-gray-100">
                            <h4 class="font-bold text-secondary mb-4">Follow Us</h4>
                            <div class="flex space-x-4">
                                <a href="#" class="bg-primary/10 w-10 h-10 rounded-full flex items-center justify-center text-primary hover:bg-primary hover:text-white transition-colors duration-300">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                                <a href="#" class="bg-primary/10 w-10 h-10 rounded-full flex items-center justify-center text-primary hover:bg-primary hover:text-white transition-colors duration-300">
                                    <i class="fab fa-linkedin-in"></i>
                                </a>
                                <a href="#" class="bg-primary/10 w-10 h-10 rounded-full flex items-center justify-center text-primary hover:bg-primary hover:text-white transition-colors duration-300">
                                    <i class="fab fa-twitter"></i>
                                </a>
                                <a href="#" class="bg-primary/10 w-10 h-10 rounded-full flex items-center justify-center text-primary hover:bg-primary hover:text-white transition-colors duration-300">
                                    <i class="fab fa-instagram"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <div class="p-8">
                        <h3 class="text-xl font-bold text-secondary mb-6">Send Us a Message</h3>

                        <form asp-controller="ContactUs" asp-action="Submit" method="post">
                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                                <div>
                                    <label asp-for="Name" class="block text-gray-700 font-medium mb-2"></label>
                                    <input asp-for="Name" class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                                    <span asp-validation-for="Name" class="text-danger text-sm"></span>
                                </div>
                                <div>
                                    <label asp-for="Email" class="block text-gray-700 font-medium mb-2"></label>
                                    <input asp-for="Email" class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                                    <span asp-validation-for="Email" class="text-danger text-sm"></span>
                                </div>
                            </div>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                                <div>
                                    <label asp-for="Phone" class="block text-gray-700 font-medium mb-2"></label>
                                    <input asp-for="Phone" class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                                    <span asp-validation-for="Phone" class="text-danger text-sm"></span>
                                </div>
                                <div>
                                    <label asp-for="Subject" class="block text-gray-700 font-medium mb-2"></label>
                                    <input asp-for="Subject" class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                                    <span asp-validation-for="Subject" class="text-danger text-sm"></span>
                                </div>
                            </div>

                            <div class="mb-6">
                                <label asp-for="Message" class="block text-gray-700 font-medium mb-2"></label>
                                <textarea asp-for="Message" rows="5" class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"></textarea>
                                <span asp-validation-for="Message" class="text-danger text-sm"></span>
                            </div>

                            <div class="mb-6">
                                <label class="flex items-center">
                                    <input asp-for="ConsentToStoreInfo" class="w-4 h-4 text-primary">
                                    <span class="ml-2 text-gray-600 text-sm">I consent to having this website store my submitted information so they can respond to my inquiry.</span>
                                </label>
                                <span asp-validation-for="ConsentToStoreInfo" class="text-danger text-sm"></span>
                            </div>

                            <button type="submit" class="bg-primary hover:bg-primary-dark text-white py-3 px-6 rounded-md font-medium transition-colors duration-300">
                                Send Message
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Map -->
                <div class="mt-8 rounded-lg overflow-hidden shadow-md h-80">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1789.703166514077!2d28.162365051997952!3d-26.215983659907355!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1e95110205dee779%3A0x3935c556b9e404bf!2sCommerce%20%26%20Industry%20Chambers!5e0!3m2!1sen!2sza!4v1748082903467!5m2!1sen!2sza"
                            width="100%"
                            height="100%"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}