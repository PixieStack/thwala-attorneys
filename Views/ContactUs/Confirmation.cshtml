@{
    ViewData["Title"] = "Message Sent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4 md:px-8 max-w-2xl">
        <div class="bg-white p-12 rounded-lg shadow-md text-center">
            <div class="mb-8">
                <i class="fas fa-envelope-open-text text-6xl text-primary mb-4"></i>
                <h2 class="text-3xl font-bold text-secondary mb-4">Message Sent Successfully</h2>
                <p class="text-gray-600 mb-6">
                    Thank you for contacting Thwala Attorneys. We have received your message and appreciate your interest in our services.
                </p>
            </div>

            <div class="bg-primary/10 p-6 rounded-lg">
                <h3 class="text-xl font-bold text-secondary mb-3">What Happens Next?</h3>
                <ul class="space-y-3 text-left text-gray-600">
                    <li class="flex items-start">
                        <i class="fas fa-check-circle text-primary mr-3 mt-1"></i>
                        <span>Our team will review your message</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check-circle text-primary mr-3 mt-1"></i>
                        <span>We'll respond to your inquiry within 24-48 hours</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check-circle text-primary mr-3 mt-1"></i>
                        <span>For urgent matters, please call our office directly at (+27) 011-234-5678</span>
                    </li>
                </ul>
            </div>

            <div class="mt-8">
                <a asp-controller="Home" asp-action="Index" class="bg-primary hover:bg-primary-dark text-white px-8 py-3 rounded-md inline-block transition-colors duration-300">
                    Return to Home
                </a>
            </div>
        </div>
    </div>
</section>