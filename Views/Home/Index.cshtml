<!-- JavaScript for carousel functionality -->
<script>
    (function() {
        let currentTestimonialSet = 0;
        const testimonialSets = document.querySelectorAll('.testimonial-set').length;
        const carousel = document.getElementById('testimonialCarousel');
        const dots = document.querySelectorAll('.carousel-dot');
        let autoRotateInterval;

        function showTestimonialSet(index) {
            // Ensure index wraps around
            currentTestimonialSet = index % testimonialSets;
            if (currentTestimonialSet < 0) currentTestimonialSet = testimonialSets - 1;

            // Apply transform
            carousel.style.transform = `translateX(-${currentTestimonialSet * 100}%)`;

            // Update dots
            dots.forEach((dot, i) => {
                if (i === currentTestimonialSet) {
                    dot.classList.remove('bg-gray-300', 'w-2');
                    dot.classList.add('bg-primary', 'w-8');
                } else {
                    dot.classList.remove('bg-primary', 'w-8');
                    dot.classList.add('bg-gray-300', 'w-2');
                }
            });
        }

        function nextTestimonialSet() {
            showTestimonialSet(currentTestimonialSet + 1);
        }

        function startAutoRotate() {
            autoRotateInterval = setInterval(nextTestimonialSet, 60000); // 60 seconds = 1 minute
        }

        function stopAutoRotate() {
            clearInterval(autoRotateInterval);
        }

        // Initialize
        showTestimonialSet(0);
        startAutoRotate();

        // Add click functionality to dots
        dots.forEach((dot, index) => {
            dot.addEventListener('click', () => {
                stopAutoRotate();
                showTestimonialSet(index);
                startAutoRotate(); // Restart auto-rotation
            });
        });

        // Optional: Pause on hover
        carousel.addEventListener('mouseenter', stopAutoRotate);
        carousel.addEventListener('mouseleave', startAutoRotate);

        // Handle touch/swipe for mobile
        let touchStartX = 0;
        let touchEndX = 0;

        carousel.addEventListener('touchstart', (e) => {
            touchStartX = e.changedTouches[0].screenX;
        }, { passive: true });

        carousel.addEventListener('touchend', (e) => {
            touchEndX = e.changedTouches[0].screenX;
            handleSwipe();
        }, { passive: true });

        function handleSwipe() {
            if (touchEndX < touchStartX - 50) {
                // Swipe left - next
                stopAutoRotate();
                nextTestimonialSet();
                startAutoRotate();
            }
            if (touchEndX > touchStartX + 50) {
                // Swipe right - previous
                stopAutoRotate();
                showTestimonialSet(currentTestimonialSet - 1);
                startAutoRotate();
            }
        }

        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowLeft') {
                stopAutoRotate();
                showTestimonialSet(currentTestimonialSet - 1);
                startAutoRotate();
            } else if (e.key === 'ArrowRight') {
                stopAutoRotate();
                nextTestimonialSet();
                startAutoRotate();
            }
        });

        // Ensure carousel is responsive
        let resizeTimer;
        window.addEventListener('resize', () => {
            clearTimeout(resizeTimer);
            resizeTimer = setTimeout(() => {
                showTestimonialSet(currentTestimonialSet);
            }, 250);
        });
    })();
</script>