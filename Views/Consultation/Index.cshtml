@model ThwalaAttorneys.Models.ConsultationRequestViewModel

@{
    ViewData["Title"] = "Request a Consultation";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<section class="py-20">
    <div class="container mx-auto px-4 md:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <div>
                <span class="text-primary font-medium">CASE EVALUATION</span>
                <h2 class="text-3xl md:text-4xl font-bold text-secondary font-playfair mt-2 mb-6">Request a Professional Case Evaluation</h2>

                <p class="text-gray-700 mb-6">
                    Complete this form to schedule a confidential evaluation of your case from one of our experienced attorneys. We'll review your situation and provide expert guidance on your legal options.
                </p>

                <div class="bg-primary/10 p-6 rounded-lg mb-8">
                    <h3 class="text-xl font-bold text-secondary mb-3">Why Request a Consultation?</h3>
                    <ul class="space-y-3">
                        <li class="flex items-start">
                            <i class="fas fa-check-circle text-primary mt-1 mr-3"></i>
                            <span>Understand your legal rights and options</span>
                        </li>
                        <li class="flex items-start">
                            <i class="fas fa-check-circle text-primary mt-1 mr-3"></i>
                            <span>Get expert analysis of your case's merits</span>
                        </li>
                        <li class="flex items-start">
                            <i class="fas fa-check-circle text-primary mt-1 mr-3"></i>
                            <span>Learn about potential compensation</span>
                        </li>
                        <li class="flex items-start">
                            <i class="fas fa-check-circle text-primary mt-1 mr-3"></i>
                            <span>No obligation to proceed with our services</span>
                        </li>
                    </ul>
                </div>

                <div class="bg-gray-50 p-6 rounded-lg">
                    <h3 class="text-xl font-bold text-secondary mb-3">Need Immediate Assistance?</h3>
                    <p class="text-gray-600 mb-4">
                        Call our helpline for urgent legal matters:
                    </p>
                    <div class="flex items-center text-2xl font-bold text-primary">
                        <i class="fas fa-phone-alt mr-3"></i>
                        <span>(+27) 010-615-0136</span>
                    </div>
                </div>
            </div>

            <div>
                <form asp-action="Submit" method="post" class="bg-white p-8 rounded-lg shadow-md">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                        <div>
                            <label asp-for="FirstName" class="block text-gray-700 font-medium mb-2">First Name</label>
                            <input asp-for="FirstName" class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="LastName" class="block text-gray-700 font-medium mb-2">Last Name</label>
                            <input asp-for="LastName" class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                        <div>
                            <label asp-for="Email" class="block text-gray-700 font-medium mb-2">Email Address</label>
                            <input asp-for="Email" class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="PhoneNumber" class="block text-gray-700 font-medium mb-2">Phone Number</label>
                            <input asp-for="PhoneNumber" class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-6">
                        <label asp-for="ServiceType" class="block text-gray-700 font-medium mb-2">Type of Legal Service</label>
                        <select asp-for="ServiceType" class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                            <option value="" selected disabled>Select a Service</option>
                            <option value="criminal">Criminal Law</option>
                            <option value="civil">Civil Litigation</option>
                            <option value="labour">Labour & Employment Law</option>
                            <option value="corporate">Corporate & Commercial Law</option>
                            <option value="property">Property Law & Conveyancing</option>
                            <option value="family">Family & Matrimonial Law</option>
                            <option value="injury">Personal Injury</option>
                            <option value="estates">Administration Of Deceased Estates</option>
                            <option value="other">Other</option>
                        </select>
                        <span asp-validation-for="ServiceType" class="text-danger"></span>
                    </div>

                    <div class="mb-6">
                        <label asp-for="CaseDescription" class="block text-gray-700 font-medium mb-2">Brief Description of Your Case</label>
                        <textarea asp-for="CaseDescription" rows="5" class="w-full px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"></textarea>
                        <span asp-validation-for="CaseDescription" class="text-danger"></span>
                    </div>

                    <div class="mb-6">
                        <label class="flex items-center">
                            <input asp-for="TermsAgreed" type="checkbox" class="w-4 h-4 text-primary" />
                            <span class="ml-2 text-gray-600 text-sm">I agree to the <a href="#" class="text-primary hover:underline">terms and conditions</a> and <a href="#" class="text-primary hover:underline">privacy policy</a>.</span>
                        </label>
                        <span asp-validation-for="TermsAgreed" class="text-danger"></span>
                    </div>

                    <button type="submit" class="w-full bg-primary hover:bg-primary-dark text-white py-3 rounded-md font-medium transition-colors duration-300 text-lg">
                        Request Case Evaluation
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

