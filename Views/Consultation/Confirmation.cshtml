@{
    ViewData["Title"] = "Consultation Submitted";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4 md:px-8 max-w-2xl">
        <div class="bg-white p-12 rounded-lg shadow-md text-center">
            <div class="mb-8">
                <i class="fas fa-check-circle text-6xl text-primary mb-4"></i>
                <h2 class="text-3xl font-bold text-secondary mb-4">Consultation Request Received</h2>
                <p class="text-gray-600 mb-6">
                    Thank you for submitting your consultation request. Our team will review your case and contact you shortly.
                </p>
            </div>

            @if (TempData["ReferenceNumber"] != null)
            {
                <div class="bg-blue-100 p-6 rounded-lg text-left mb-6">
                    <h3 class="text-xl font-bold text-blue-800 mb-3">Your Request Details</h3>
                    <div class="space-y-3">
                        <div class="flex flex-col md:flex-row md:justify-between">
                            <span class="font-bold text-blue-800">Reference Number:</span>
                            <span class="text-blue-800 bg-blue-50 px-3 py-1 rounded">@TempData["ReferenceNumber"]</span>
                        </div>
                        @if (TempData["SubmittedDate"] != null)
                        {
                            <div class="flex flex-col md:flex-row md:justify-between">
                                <span class="font-bold text-blue-800">Submitted On:</span>
                                <span class="text-blue-800">@TempData["SubmittedDate"]</span>
                            </div>
                        }
                        @if (TempData["ServiceType"] != null)
                        {
                            <div class="flex flex-col md:flex-row md:justify-between">
                                <span class="font-bold text-blue-800">Service Type:</span>
                                <span class="text-blue-800">@TempData["ServiceType"]</span>
                            </div>
                        }
                    </div>
                    <p class="text-red-600 mt-3 text-sm">Please save your reference number for your records.</p>
                </div>
            }

            <div class="bg-primary/10 p-6 rounded-lg">
                <h3 class="text-xl font-bold text-secondary mb-3">What Happens Next?</h3>
                <ul class="space-y-3 text-left text-gray-600">
                    <li class="flex items-start">
                        <i class="fas fa-check-circle text-primary mr-3 mt-1"></i>
                        <span>Our team will review your case details</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check-circle text-primary mr-3 mt-1"></i>
                        <span>An attorney will contact you within 24-48 business hours</span>
                    </li>
                    <li class="flex items-start">
                        <i class="fas fa-check-circle text-primary mr-3 mt-1"></i>
                        <span>We'll provide initial guidance on your legal options</span>
                    </li>
                </ul>
            </div>

            <div class="mt-8">
                <a asp-controller="Home" asp-action="Index" class="bg-primary hover:bg-primary-dark text-white px-8 py-3 rounded-md inline-block transition-colors duration-300">
                    Return to Home
                </a>
            </div>
        </div>
    </div>
</section>