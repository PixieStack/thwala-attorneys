        function addTerminologyTooltips() {
            const paragraphs = document.querySelectorAll('p, li, h3, h4, h5, span'); 
            paragraphs.forEach(element => {
                let originalHTML = element.innerHTML;
                let modifiedHTML = originalHTML;

                Object.keys(labourTerms).forEach(term => {
                    const regex = new RegExp(`\\b${term}\\b(?!<\\/span>)`, 'g'); 
                    modifiedHTML = modifiedHTML.replace(regex, `<span class="labour-term" title="${labourTerms[term]}">${term}</span>`);
                });

                if (originalHTML !== modifiedHTML) {
                    element.innerHTML = modifiedHTML;
                }
            });
        }

