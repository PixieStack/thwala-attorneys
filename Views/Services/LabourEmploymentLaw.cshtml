            const daysDiff = Math.floor((today - dismissal) / (1000 * 60 * 60 * 24));

            const timeline = {
                referralDeadline: new Date(dismissal.getTime() + (30 * 24 * 60 * 60 * 1000)),
                daysRemaining: 30 - daysDiff,
                isUrgent: daysDiff > 25 && daysDiff <= 30, 
                hasExpired: daysDiff > 30
            };

            return timeline;
        }

