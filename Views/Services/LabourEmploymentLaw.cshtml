        function validateLabourInquiry(formData) {
            const requiredFields = ['name', 'email', 'phone', 'inquiry-type', 'message'];
            const errors = [];

            requiredFields.forEach(field => {
                if (!formData[field] || formData[field].trim() === '') {
                    errors.push(`${field.replace('-', ' ')} is required`);
                }
            });

            
            const phoneRegex = /^(\+27|0)[1-9][0-9]{8}$/;
            if (formData.phone && !phoneRegex.test(formData.phone.replace(/\s/g, ''))) {
                errors.push('Please enter a valid South African phone number');
