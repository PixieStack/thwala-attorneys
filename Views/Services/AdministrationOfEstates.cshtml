@section Scripts {
    <script>
        // Function to toggle FAQ content visibility
        function toggleFAQ(event) {
            const btn = event.currentTarget;
            const contentId = btn.getAttribute('aria-controls');
            const content = document.getElementById(contentId);
            const isExpanded = btn.getAttribute('aria-expanded') === 'true';

            btn.setAttribute('aria-expanded', !isExpanded);
            content.classList.toggle('hidden');

            const arrow = btn.querySelector('span:last-child i'); 
            arrow.style.transform = !isExpanded ? 'rotate(180deg)' : 'rotate(0deg)';
        }

        function validateSAphone(phone) {
            const phoneDigits = phone.replace(/\s+/g, '');
            return /^(\+27|0)[6-8][0-9]{8}$/.test(phoneDigits);
        }

        function calculateRAFDeadline() {
            const input = document.getElementById('rafDateInput').value;
            const result = document.getElementById('rafDeadlineResult');
            if (!input) {
                result.textContent = "Please select your accident date to calculate the deadline.";
                return;
            }
            const accidentDate = new Date(input);
            const now = new Date();
            const deadlineYears = 3;
            const deadlineDate = new Date(accidentDate);
            deadlineDate.setFullYear(deadlineDate.getFullYear() + deadlineYears);

            if (deadlineDate < now) {
                result.textContent = "Unfortunately, your general RAF claim deadline appears to have passed.";
                result.classList.remove('text-green-900');
                result.classList.add('text-red-600');
            } else {
                const diffDays = Math.ceil((deadlineDate - now) / (1000 * 60 * 60 * 24));
                result.textContent = `You have approximately ${diffDays} day(s) left to submit your RAF claim (deadline: ${deadlineDate.toLocaleDateString('en-ZA')}). Consult an attorney immediately.`;
                result.classList.remove('text-red-600');
                result.classList.add('text-green-900');
            }
        }

        function toggleMoreRights() {
            const moreRights = document.getElementById('moreRights');
            const button = event.target;

            if (moreRights) {
                moreRights.classList.toggle('hidden');
                if (moreRights.classList.contains('hidden')) {
                    button.innerHTML = 'View More Rights <i class="fas fa-chevron-down ml-2"></i>';
                } else {
                    button.innerHTML = 'View Less Rights <i class="fas fa-chevron-up ml-2"></i>';
                }
            } else {
                console.warn("Element with ID 'moreRights' not found for toggleMoreRights function.");
            }
        }

        function toggleAccordion(id) {
            const content = document.getElementById(id);
            const icon = document.getElementById(id + '-icon');

            if (content && icon) {
                content.classList.toggle('hidden');
                if (content.classList.contains('hidden')) {
                    icon.style.transform = 'rotate(0deg)';
                } else {
                    icon.style.transform = 'rotate(180deg)';
                }
            } else {
                console.warn(`Elements with ID '${id}' or '${id}-icon' not found for toggleAccordion function.`);
            }
        }
    </script>
}